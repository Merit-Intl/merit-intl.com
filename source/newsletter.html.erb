---
pageable: true
per_page: 10
---
<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
<br/>
<center>	
<% imgfile = Dir.glob("source/"+article.path.chomp("index.html")+"*s.{jpg,JPG,gif,GIF,png,PNG}") %>
<table style="border-width:5px; border-style:double; border-color:black;" align="center" width="540">
 <caption style="border-width:5px; border-style:double;border-color:black;">
  <% link_to 'http://merit-intl.com/'+article.path.chomp("index.html"), :style => 'text-decoration: none;' do %>
   <font size="5" color="black"><%=article.title%><strong></strong></font>
  <% end %>
 </caption>
<tbody>
 <tr>
  <td colspan="2" align="center">
  	<% link_to 'http://merit-intl.com/'+article.path.chomp("index.html") do %>
		<%= image_tag 'http://merit-intl.com'+imgfile[0][6,imgfile[0].length] , :height => '250', :alt => 'Main Product Image',  :style=>'border:2px;' %>
	<% end %>
  </td>
 </tr>

 <tr>
  <td>
   <table>
    <tr>
     <td>

      <table style="border-width:1px; border-style:solid solid hidden solid; border-color:grey;">
       <tr>
        <td width="120">&nbsp;<strong>Item #</strong></td>
        <td align="right" width="120"><%= item_no = article.path.chomp("/index.html")[5,99] %>&nbsp;</td>
       </tr>
      </table>

      <table style="border-width:1px; border-style:solid solid hidden solid; border-color:grey;">
       <tr>
        <td width="120">&nbsp;<strong>MSRP</strong></td>
        <td align="right" width="120">&nbsp;</td>
       </tr>
      </table>

       <table style="border-width:1px; border-style:solid solid hidden solid; border-color:grey;">
        <tr>
         <td width="120">&nbsp;<strong>MAP</strong></td>
         <td align="right" width="120">&nbsp;</td>
        </tr>
       </table>

      <table style="border-width:1px; border-style:solid; border-color:grey;">
       <tr>
        <td width="120">&nbsp;<strong>Dealer</strong></td>
        <td align="right" width="120">$&nbsp;</td>
       </tr>
      </table>
     </td>
    </tr>
   </table>
  </td>

  <td colspan="2">
   <table>
    <tr>
     <td>

      <table style="border-width:1px; border-style:solid solid hidden solid; border-color:grey;">
       <tr>
        <td width="120"><strong>&nbsp;Available</strong></td>
        <td align="right" width="120"><%= article.data.expected %>&nbsp;</td>
       </tr>
      </table>

      <table style="border-width:1px; border-style:solid solid hidden solid; border-color:grey;">
       <tr>
        <td width="120">&nbsp;<strong>Barcode</strong></td>
        <td align="right" width="120">
        	<% if article.data.barcode %>
			 <%= article.data.barcode %>
			<% end %>
		</td>
       </tr>
      </table>

      <table style="border-width:1px; border-style:solid solid hidden solid; border-color:grey;">
       <tr>
        <td width="120">&nbsp;<strong>Dimensions</strong></td>
        <td align="right" width="120">&nbsp;</td>
       </tr>
      </table>

      <table style="border-width:1px; border-style:solid; border-color:grey;">
       <tr>
        <td width="120">&nbsp;<strong>Weight</strong></td>
        <td align="right" width="120">&nbsp;</td>
       </tr>
      </table>
     </td>
    </tr>
   </table>
  </td>
 </tr>

 <tr>
  <td colspan="2" style="border-style:none;" align="center">
	<% imgfile[1..3].each do |entry| %>
		<% link_to 'http://merit-intl.com/'+article.path.chomp("index.html") do %>
			<%= image_tag 'http://merit-intl.com'+entry[6,entry.length] , :width => '170', :alt => 'Product Image',  :style=>'border:2px;' %>
		<% end %>
	<% end %>
  </td>
 </tr>

 <tr>
  <td align="right">
   <table style="border-width:1px; border-style:solid; border-color:grey;">
    <tr>
     <td align="right" width="250"><big><strong>&nbsp;Quantity on Order&nbsp;</strong></big></td>
    </tr>
    <tr>
     <td align="right" width="250"><big><strong>&nbsp;Additional Order&nbsp;</strong></big></td>
    </tr>
    <tr>
     <td align="right" width="250"><big><strong>&nbsp;Total Quantity&nbsp;</strong></big></td>
    </tr>
   </table>
  </td>

  <td align="left">
   <table>
    <tr>
     <td style="border-width:1px; border-style:solid; border-color:grey;" align="center" width="250"><big>&nbsp;</big></td>
    </tr>
    <tr>
     <td style="border-width:1px; border-style:solid; border-color:grey;" align="center" width="250"><big>&nbsp;</big></td>
    </tr>
    <tr>
     <td style="border-width:1px; border-style:solid; border-color:grey;" align="center" width="250"><big>&nbsp;</big></td>
    </tr>
   </table>
  </td>
 </tr>

</tbody>
</table>

</center>
<p><!-- Fix for CKEditor --></p>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

      <ol>
        <% blog.articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
        <% end %>
      </ol>